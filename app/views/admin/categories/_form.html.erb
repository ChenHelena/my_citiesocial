<%= form_with model: [:admin, category] do |form| %>
  <div class="columns">
    <div class="column is-6">
      <div class="field">
        <%= form.label :name, '分類', class: 'label' %>
        <%= form.text_field :name, class: 'input is-medium' %>
      </div>
    </div>
  </div>
  <%= form.submit class: 'button is-primary is-medium' %>
<% end %>